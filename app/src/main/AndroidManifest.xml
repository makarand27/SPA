<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.spa">


    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.Manifest.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="com.app.spa.App"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity
            android:name="com.app.spa.PreferenceActivity"
            android:label="@string/title_activity_preference"
            android:theme="@style/AppTheme.BSAActionBar"></activity>
        <activity
            android:name="com.app.spa.StudentMaintActivity"
            android:label="@string/title_activity_student_maint"
            android:parentActivityName="com.app.spa.StudentsListActivity"
            android:theme="@style/AppTheme.BSAActionBar"
            android:launchMode="singleTop"
            >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.app.spa.StudentsListActivity" />
        </activity>
        <activity
            android:name="com.app.spa.FeeMaintenance"
            android:label="@string/title_activity_fee_maint"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.BSAActionBar" />
        <activity
            android:name="com.app.spa.BatchMaintenanceActivity"
            android:label="@string/title_activity_batch_maint"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.BSAActionBar" />
        <activity
            android:name="com.app.spa.SearchActivity"
            android:label="@string/title_activity_search_results"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.BSAActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.app.spa.StudentsListActivity"
            android:label="@string/title_activity_students_list"
            android:parentActivityName="com.app.spa.BatchListActivity"
            android:theme="@style/AppTheme.BSAActionBar"
            android:launchMode="singleTop">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.app.spa.BatchListActivity" />
        </activity>
        <activity
            android:name="com.app.spa.SignInActivity"
            android:theme="@style/AppTheme.BSAActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.spa.BatchListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.BSAActionBar">
        </activity>
        <activity
            android:name="com.app.spa.StudentAnalyticsActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.app.spa.BatchListActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.BSAActionBar">
        </activity>
    </application>

</manifest>